@model Revamp.IO.Structs.Models.SessionObjects
@{
    ViewBag.Title = "Login";

    var textDisclaimer = System.Configuration.ConfigurationManager.AppSettings["showDisclaimer"];

    bool hasDisclaimer = @Model.appSettings.ShowDisclaimer;
    var logoImg = @Model.appSettings.Logo.Path + "/logo.png";
    var style = "width:" + @Model.appSettings.Logo.css.width + "; margin:" + @Model.appSettings.Logo.css.margin; ;
}

<div class="login-wrapper">
    frgerg
</div>

@section currentpage_css
{
    <link href="~/Areas/Users/Styles/Profile/default.css" rel="stylesheet" />
    <link href="~/assets/admin/layout/css/home.css" rel="stylesheet" />
    <link href="~/Areas/Authentication/Styles/Shared/Index.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <style type="text/css">
        .slick-list {
            outline: none !important;
        }

        .slick-slide {
            outline: none !important;
        }
    </style>
}

@section currentpage_js
