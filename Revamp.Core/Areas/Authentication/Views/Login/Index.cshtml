    <script src="~/Areas/Authentication/Scripts/Login/Functions.js"></script>
    <script src="~/Areas/Authentication/Scripts/Login/Binds.js"></script>
    <script src="~/Areas/Authentication/Scripts/Login/Ready.js"></script>
